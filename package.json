{
  "name": "chattar",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "services/*",
    "shared/*"
  ],
  "scripts": {
    "setup": "python scripts/setup.py",
    "dev": "docker compose up",
    "dev:build": "docker compose up --build",
    "restart:dashboard": "docker compose restart dashboard",
    "restart:backend": "docker compose restart backend",
    "restart:web": "docker compose restart web",
    "stop:dashboard": "docker compose stop dashboard",
    "stop:backend": "docker compose stop backend",
    "stop:web": "docker compose stop web",
    "down": "docker compose down",
    "clean": "docker compose down -v",
    "logs": "docker compose logs -f",
    "logs:backend": "docker compose logs -f backend",
    "logs:web": "docker compose logs -f web",
    "logs:dashboard": "docker compose logs -f dashboard",
    "dev:local": "concurrently \"cd services/backend && bun run dev\" \"cd services/frontend && bun run dev\"",
    "lint": "bunx eslint",
    "type-check": "bunx tsc --noEmit"
  },
  "packageManager": "bun@1.3.0",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chattar": "workspace:*",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "prettier": "^3.7.4"
  }
}
